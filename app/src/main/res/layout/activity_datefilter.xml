<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DateFilter"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="분류할 날짜를 입력해주세요."
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/oneday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하루"
            android:textSize="20sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/group_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/one_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="YYYY"
                android:layout_marginLeft="50dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                android:textSize="17sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/one_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="MM"
                android:layout_marginLeft="25dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textSize="17sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/one_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="DD"
                android:layout_marginLeft="25dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textSize="17sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <TextView
            android:id="@+id/warring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 올바른 형식이 아닙니다."
            android:textColor="#F50707"
            android:layout_marginLeft="50dp"
            android:visibility="invisible"/>

        <RadioButton
            android:id="@+id/during"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기간"
            android:textSize="20sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:id="@+id/group_two">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시작일"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/start_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="YYYY"
                    android:layout_marginLeft="25dp"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="년"
                    android:textSize="17sp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/start_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    android:layout_marginLeft="25dp"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textSize="17sp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/start_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="DD"
                    android:layout_marginLeft="25dp"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textSize="17sp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종료일"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/end_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="YYYY"
                    android:layout_marginLeft="25dp"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="년"
                    android:textSize="17sp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/end_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    android:layout_marginLeft="25dp"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textSize="17sp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/end_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="DD"
                    android:layout_marginLeft="25dp"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:textSize="17sp"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/warring2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 올바른 형식이 아닙니다."
            android:textColor="#F50707"
            android:layout_marginLeft="50dp"
            android:visibility="invisible"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:layout_marginRight="25dp"/>



</LinearLayout>